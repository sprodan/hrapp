@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Добавить Команду</h2>
<hr>
<form class="form-horizontal" method="post" role="form" novalidate="novalidate">
    <div class="form-group">
        <label class="col-md-2 control-label">Название Команды</label>
        <div class="col-md-10">
            <input class="form-control" data-val="true" data-val-required="Требуется поле" type="text" placeholder="Команда 5">
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Добавить">
        </div>
    </div>
</form>